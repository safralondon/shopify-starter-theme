<h1>{{ 'customer.activate_account.title' | t }}</h1>
<p>{{ 'customer.activate_account.subtext' | t }}</p>

{% form 'activate_customer_password' %}
  {{ form.errors | default_errors }}

  <p>
    <label for="CustomerPassword">
      {{ 'customer.activate_account.password' | t }}
    </label>
    <input
      id="CustomerPassword"
      name="customer[password]"
      type="password">
  </p>

  <p>
    <label for="CustomerPasswordConfirmation">
      {{ 'customer.activate_account.password_confirm' | t }}
    </label>
    <input
      id="CustomerPasswordConfirmation"
      name="customer[password_confirmation]"
      type="password">
  </p>

  <button type="submit" class="button">{{ 'customer.activate_account.submit' | t }}</button>
  <button type="submit" class="button button--secondary" name="decline">{{ 'customer.activate_account.cancel' | t }}</button>
{% endform %}
